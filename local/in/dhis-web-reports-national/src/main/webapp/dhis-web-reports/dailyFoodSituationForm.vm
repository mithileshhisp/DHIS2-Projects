			</td>
		</tr>
          
        <tr>
			<td> 
				<br/>          	

				<!--<b><label for="reportDate">$i18n.getString( 'output_type' )</label> </b><br/>-->
				<select name="outputType" id="outputType" style="width:150px;display:none">
					<option value='rtf' id='rtf'>$i18n.getString( 'rtf' )</option>
				</select>
			</td> 
		</tr>
	    
		<tr>
			<td>
				Bangla Language <input type="checkbox" value="Bangla" name="fontName" id="fontName" onclick="javascript:getOutputType()"/>
