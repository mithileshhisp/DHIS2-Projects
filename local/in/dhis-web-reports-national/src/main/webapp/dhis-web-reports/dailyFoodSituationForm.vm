
<script type="text/javascript">
		jQuery( function(){
			datePicker( "reportDate",{"dateFormat":"dd/MM/yyyy"});
	    }); 
 
	 jQuery(window).load(function() {
	   	getOutputType();		
	}); 
	function getOutputType()
	{
		if(document.getElementById("fontName").checked == true)
	   	{
	   		$("#outputType option").remove();
	   		$("#outputType").append(" <option value='rtf' id='rtf'>$i18n.getString( 'rtf' )</option>")
	   }
	   	else
	   	{
	   		$("#outputType option").remove();
	   		$("#outputType").append(" <option value='rtf' id='rtf' selected='selected'>$i18n.getString( 'rtf' )</option>")


	   	}
	}
     
    function onSubmitFunction( reportoutputmode )
	{
		document.getElementById("reportOutputMode").value = reportoutputmode;
	}
     
</script>

