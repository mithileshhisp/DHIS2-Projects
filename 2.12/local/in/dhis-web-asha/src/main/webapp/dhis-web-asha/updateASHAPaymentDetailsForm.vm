<script>
    
	jQuery(document).ready( function(){
	currentDiv = 'ASHAPaymentDataEntryForm';
	isSubmit = true;
    jQuery("#ASHAPaymentDataEntryForm").validate({
		meta:"validate"
		,errorElement:"span"
