<script type="text/javascript">
	jQuery(document).ready(function(){	
		tableSorter( 'listTable' );	
	});
	
	var i18n_please_select_orgUnit = '$encoder.jsEscape( $i18n.getString( "please_select_orgUnit" ) , "'")';
	var i18n_confirm_to_delete_facilitator = '$encoder.jsEscape( $i18n.getString( "confirm_to_delete_asha_facilitator" ) , "'" )';
	var i18n_ovc_location_details = '$encoder.jsEscape( $i18n.getString( "location_details" ) , "'" )';
</script>
<input type="hidden" id='selectedOrgunitID' value="$!organisationUnit.id" />
<div id ="ashaManagementDiv" ></div><!-- ASHA Management Div -->
<div id='addUpdateASHAProfileDiv'></div> <!-- Add / Edit ASHA Profile Form -->
<div id='resultSearchDiv' style='font-size:13px'></div> <!-- List searching ASHAS -->
<div id ="ashaFacilitatorListDiv" >
#if( $status == "NONE" )
<h3>$i18n.getString( "asha_facilitator_management" ) - $!organisationUnit.name</h3>

<table class="mainPageTable">
	<tr>
		<td style="vertical-align:top">
			<table width="100%">
				<tr>
					<td>#filterDiv( "getASHAFacilitatorList" )</td>
					<td colspan="3" style="text-align:right">
						<input type="button" value="$i18n.getString( 'add_new' )" onclick="window.location.href='showAddASHAFacilitatorForm.action?organisationUnitId=$organisationUnit.id'"/>
					</td>
				</tr>
			</table>
			<table class="listTable" id="listTable">
				<col width="30"/>
				<col/>
				<col/>
				<col/>
				<col/>
				<col/>
				<col width="100"/>				
                <thead>
				<tr>
					<th>#</th>
					<th>$i18n.getString( "name" )</th>
					<th>$i18n.getString( "gender" )</th>
					<th>$i18n.getString( "contactNumber" )</th>
					<th>$i18n.getString( "address" )</th>
					<th>$i18n.getString( "active" )</th>
					<th class="{sorter: false}">$i18n.getString( "operations" )</th>
				</tr>
                </thead>
				<tbody id="list">
				#foreach( $facilitator in $facilitators )
				
				<tr id="tr${facilitator.id}">
					<td>#set( $nr = ( ( $paging.getCurrentPage() - 1  ) * $paging.pageSize ) + $velocityCount )
						$nr
					</td>
					<td>$encoder.htmlEncode( $!facilitator.name )</td>
					<td>$encoder.htmlEncode( $!facilitator.gender )</td>
					<td>$encoder.htmlEncode( $!facilitator.getContactNumber() )</td>
					<td>$encoder.htmlEncode( $!facilitator.getAddress() )</td>
					
					#set($activeStatus="")
					
					#if( $!facilitator.active == true )
						#set($activeStatus = "Yes")
					#else
						#set($activeStatus = "No")
					#end
					
					<td>$activeStatus</td>
					<td style="text-align:right">
						<a href="showUpdateASHAFacilitatorForm.action?id=$facilitator.id" title="$i18n.getString( 'edit' )"><img src="../images/edit.png" alt="$i18n.getString( 'edit' )"/></a>
						<a href="showASHAFacilitatorDataEntryForm.action?id=$facilitator.id" title="$i18n.getString( 'data_entry_form' )"><img src="../images/edit_layout.png" alt="$i18n.getString( 'data_entry_form' )"/></a>
						<a href="javascript:removeASHAFacilitator( $facilitator.id, '$encoder.jsEncode( $facilitator.name )' )" title="$i18n.getString( 'remove' )"><img src="../images/delete.png" alt="$i18n.getString( 'remove' )"/></a>
						<!--<a href="javascript:showLocationDetails( $facilitator.id )" title="$i18n.getString( 'show_details' )"><img src="../images/information.png" alt="$i18n.getString( 'show_details' )"/></a>-->
					</td>
				</tr>
				#end
                </tbody>
				
			</table>
			<p></p>
			#parse( "/dhis-web-commons/paging/paging.vm" )

		</td>

	</tr>
</table>

 <div id="detailsInfo"></div><!-- details information div -->
 <span id="message"></span>
 
 #else
	<h4>$status</h4>
#end
</div>