<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	
<!-- Custom Report -->		
	<!-- Store -->
	<bean id="org.hisp.dhis.customreports.CustomReportStore"
		class="org.hisp.dhis.customreport.hibernate.HiberateCustomReportStore">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>

	<!-- Service -->
	<bean id="org.hisp.dhis.customreports.CustomReportService"
		class="org.hisp.dhis.customreport.DefaultCustomReportService">
		<property name="customReportStore" ref="org.hisp.dhis.customreports.CustomReportStore"/>
	</bean>

	
<!-- Custom Report Design -->
	<!-- Store -->
	<bean id="org.hisp.dhis.customreports.CustomReportDesignStore"
		class="org.hisp.dhis.customreport.hibernate.HiberateCustomReportDesignStore">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>

	<!-- Service -->
	<bean id="org.hisp.dhis.customreports.CustomReportDesignService"
		class="org.hisp.dhis.customreport.DefaultCustomReportDesignService">
		<property name="customReportDesignStore" ref="org.hisp.dhis.customreports.CustomReportDesignStore"/>
	</bean>	
	
	
<!-- Custom Report Filter -->		
	<!-- Store -->
	<bean id="org.hisp.dhis.customreports.CustomReportFilterStore"
		class="org.hisp.dhis.customreport.hibernate.HiberateCustomReportFilterStore">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>

	<!-- Service -->
	<bean id="org.hisp.dhis.customreports.CustomReportFilterService"
		class="org.hisp.dhis.customreport.DefaultCustomReportFilterService">
		<property name="customReportFilterStore" ref="org.hisp.dhis.customreports.CustomReportFilterStore"/>
	</bean>		
	
		
</beans>
