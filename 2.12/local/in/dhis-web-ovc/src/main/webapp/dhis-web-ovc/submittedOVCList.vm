							#if($mapPatientOrgunit.size()!=0)
								<td>$!mapPatientOrgunit.get($patient.id)</td>
							#end
							
							<td>
								#if( $auth.hasAccess( "dhis-web-ovc", "updateovcstatus") )
									<a href="javascript:showUpdateOVCRegistrationForm( '$patient.id' )" title='$i18n.getString( "edit_profile_status" )'><img src="images/profile.png" alt='$i18n.getString( "edit_profile_status" )'></a>
								#else
									<a href="javascript:showUpdateOVCRegistrationForm( '$patient.id' )" title='$i18n.getString( "edit_profile" )'><img src="../images/edit.png" alt='$i18n.getString( "edit_profile" )'></a>
								#end
								
								<a href="javascript:removeSubmittedOVC( '$patient.id', '$encoder.jsEncode( $patient.getFullName() )' )" title='$i18n.getString( "remove" )'><img src="../images/delete.png" alt='$i18n.getString( "remove" )'></a>
								<!--<a href="javascript:showOVCHouseHoldAssessmentForm( '$patient.id' )" title='$i18n.getString( "household_assessment_form" )'><img src="images/form1A.png" alt='$i18n.getString( "household_assessment_form" )'></a>-->
								<a href="javascript:showOVCRegistrationDetails( '$patient.id' )" title='$i18n.getString( "ovc_Registration_details" )'><img src="../images/information.png" alt='$i18n.getString( "patient_details_and_history" )'></a>
							</td>                               
						</tr>
					#end
