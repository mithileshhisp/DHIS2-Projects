							<td>$format.formatDate( $patient.birthDate )</td>
							<td>$encoder.htmlEncode( $patient.getAge() )</td>
							<td>$!mapPatientSystemIdentifier.get($patient.id)</td>
							<!--
							#if($mapPatientSystemIdentifier.size()!=0 )
								<td>$!mapPatientSystemIdentifier.get($patient.id)</td>
							#end
							<td>$!patient.phoneNumber</td>
