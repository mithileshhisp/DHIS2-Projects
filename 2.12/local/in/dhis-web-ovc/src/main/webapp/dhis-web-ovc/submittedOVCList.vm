					#foreach( $patient in $patients )
						<tr id="tr${patient.id}">
							<td>#set( $nr = ( ( $paging.getCurrentPage() - 1  ) * $paging.pageSize ) + $velocityCount )
								$nr
							</td>
							
							#set($value="")
