<script type="text/javascript">
	jQuery(document).ready(function(){	
		tableSorter( 'listTable' );	
	});

	var i18n_confirm_to_delete_school = '$encoder.jsEscape( $i18n.getString( "confirm_to_delete_school" ) , "'" )';
	var i18n_ovc_school_details = '$encoder.jsEscape( $i18n.getString( "ovc_school_details" ) , "'" )';
</script>

#if( $status == "NONE" )
<h3>$i18n.getString( "school_management" ) #openHelp( "" )</h3>

<table class="mainPageTable">
	<tr>
		<td style="vertical-align:top">
			<table width="100%">
				<tr>
					<td>#filterDiv( "getSchoolList" )</td>
					<td colspan="3" style="text-align:right">
						<input type="button" value="$i18n.getString( 'add_new' )" onclick="window.location.href='showAddSchoolForm.action?organisationUnitId=$organisationUnit.id'"/>
					</td>
				</tr>
			</table>
			<table class="listTable" id="listTable">
				<col/>
				<col width="150px"/>
                <thead>				
				<tr>
					<th>$i18n.getString( "name" )</th>
					<th class="{sorter: false}">$i18n.getString( "operations" )</th>
				</tr>
                </thead>
				<tbody id="list">
				#foreach( $school in $schools )
				<tr id="tr${school.id}">
					<td>$encoder.htmlEncode( $school.name )</td>
					<td style="text-align:right">
						<a href="showUpdateSchoolForm.action?id=$school.id" title="$i18n.getString( 'edit' )"><img src="../images/edit.png" alt="$i18n.getString( 'edit' )"/></a>
						<a href="showSchoolFeeDetailsForm.action?id=$school.id" title="$i18n.getString( 'school_fee_details_form' )"><img src="../images/edit_layout.png" alt="$i18n.getString( 'school_fee_details_form' )"/></a>
						<a href="showSchoolDetailsReportForm.action?id=$school.id" title="$i18n.getString( 'school_details_report' )"><img src="images/download.png" alt="$i18n.getString( 'school_details_report' )"/></a>
						<a href="javascript:removeSchool( $school.id, '$encoder.jsEncode( $school.name )' )" title="$i18n.getString( 'remove' )"><img src="../images/delete.png" alt="$i18n.getString( 'remove' )"/></a>
						<!--<a href="showSchoolDetailsReportForm.action?id=$school.id" title="$i18n.getString( 'school_details_report' )"><img src="images/download.png" alt="$i18n.getString( 'school_details_report' )"/></a>-->
						<a href="javascript:showSchoolDetails( $school.id )" title="$i18n.getString( 'show_details' )"><img src="../images/information.png" alt="$i18n.getString( 'show_details' )"/></a>
						
					</td>
				</tr>
				#end
                </tbody>
				
			</table>
			<p></p>
			#parse( "/dhis-web-commons/paging/paging.vm" )

		</td>
	</tr>
</table>

 <div id="detailsSchoolInfo"></div><!-- School details information div -->
 <span id="message"></span>
	
 #else
    <h4>$status</h4>
#end