<script>
    
	jQuery(document).ready( function(){
	currentDiv = 'schoolDetailsDataEntryForm';
	isSubmit = true;
    jQuery("#schoolDetailsDataEntryForm").validate({
		meta:"validate"
		,errorElement:"span"
		,submitHandler: function(form)
		{
        	if( isSubmit ) 
            {
            	saveSchoolDetailsDataEntryForm();
            }
		}
    	});
    }); 
    
</script>



<h3>$i18n.getString( "school_details_dataentry" )</h3>

<form id="schoolDetailsDataEntryForm" name="schoolDetailsDataEntryForm" method="post" >	
<div>
	<input type="hidden" name="orgUnitId" id="orgUnitId" value="$!school.organisationUnit.getId()" />
	<input type="hidden" name="schoolId" id="schoolId" value="$!school.getId()" />
</div>

<div class="inputCriteria" style="width:500px;height:110px;">
<table>
	<tr>
		<td><label for="orgUnitName">$i18n.getString( "organisation_unit" )</label></td>
		<td><input type="text" id="orgUnitName" name = "orgUnitName" readonly="readonly" value="$!school.organisationUnit.getName()" style="width:367px"></td>
	</tr>
	<tr>
		<td><label for="name">$i18n.getString( "school_name" )</label></td>
		<td><input type="text" id="name" name = "name" readonly="readonly" value="$!school.name" style="width:367px"></td>
	</tr>

	<tr>
		<td><label for="selectedPeriodId">$i18n.getString( "period" )</label></td>
		<td>
			<select id="selectedPeriodId" name="selectedPeriodId" style="width:370px" onchange="loadSchoolDetailsDataEntryForm()">
				<option value="-1">[$i18n.getString( "please_select" )]</option>
				#foreach( $period in $periods )
					<option value="$period.getExternalId()">$encoder.htmlEncode( $period.name )</option>
    			#end
			</select>
		</td>
	</tr>

	<tr>
		<td>&nbsp;</td>
		<td>
			<input type="button" id="prevButton"  style="width:75px" value="$i18n.getString( 'prev_year' )" title="$i18n.getString('earlier_periods')" onclick="getAvailablePeriods( 'selectedPeriodId', 'selectedPeriodId', '-1' )" >
			<input type="button" id="nextButton"  style="width:75px" value="$i18n.getString( 'next_year' )" title="$i18n.getString('later_periods')" onclick="getAvailablePeriods( 'selectedPeriodId', 'selectedPeriodId', '1' )" >
		</td>	
</tr>	
		
</table>
</div>

#parse( "/dhis-web-commons/loader/loader.vm" )
<div id='schoolDetailsDataEntryFormDiv'></div> <!-- DataEntry Form -->  	



<p>
	<input type="button"  value="$i18n.getString( 'cancel' )" style="width:100px" onclick="window.location.href='getSchoolList.action'"/>&nbsp;&nbsp;
	&nbsp;&nbsp;<input type="submit"  id="saveButton" name="saveButton" value="$i18n.getString( 'save' )" disabled="disabled" style="width:100px"/>
</p>


</form>

