{
    "name": "amr-entry",
    "version": "0.4.1",
    "description": "AMR data entry app for DHIS2",
    "main": "index.js",
    "license": "BSD-3-Clause",
    "homepage": ".",
    "developer": {
        "name": "Gyan Bahadur Tamang",
        "company": "HISP India"
    },
    "manifest.webapp": {
        "name": "AMR Data Entry- Patient Overview",
        "description": "Enter AMR data.",
        "appType": "APP",
        "activities": {
            "dhis": {
                "href": "*"
            }
        }
    },
    "icons": {
        "16": "appicon-16x16.svg",
        "32": "appicon-32x32.svg",
        "48": "appicon-48x48.svg"
    },
    "scripts": {
        "start": "cross-env REACT_APP_DHIS2_TABLE_CONFIG=tanda PORT=3001 react-scripts start",
        "build": "yarn build:icmr && yarn build:tanda",
        "build:icmr": "cross-env REACT_APP_DHIS2_TABLE_CONFIG=icmr react-scripts build",
        "build:tanda": "cross-env REACT_APP_DHIS2_TABLE_CONFIG=tanda react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "prebuild:icmr": "rimraf build ../../amr-entry-icmr.zip && d2-manifest package.json public/manifest.webapp",
        "postbuild:icmr": "cd build && bestzip ../../../amr-entry-icmr.zip *",
        "prebuild:tanda": "rimraf build ../../amr-entry-tanda.zip && d2-manifest package.json public/manifest.webapp",
        "postbuild:tanda": "cd build && bestzip ../../../amr-entry-tanda.zip *",
        "analyze": "source-map-explorer build/static/js/*.js'"
    },
    "dependencies": {
        "@dhis2/ui-core": "^3.12.0",
        "@hisp-amr/api": "*",
        "@hisp-amr/app": "*",
        "@hisp-amr/icons": "*",
        "@hisp-amr/inputs": "*",
        "@hisp-amr/org-unit-tree": "*",
        "antd": "^4.15.2",
        "jquery": "^3.4.1",
        "material-design-icons": "^3.0.1",
        "react": "^16.9.0",
        "react-bootstrap-sweetalert": "^5.1.9",
        "react-dom": "^16.9.0"
    }
}
